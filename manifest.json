{
  "manifest_version": 3,
  "name": "TabSave Extension",
  "version": "1.0",
  "description": "Save nad restore tabs of the current window, including containers and pins.",
  "permissions": [
    "tabs",
    "contextualIdentities",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "background": {
    "scripts": ["background.js"]
  }
} 